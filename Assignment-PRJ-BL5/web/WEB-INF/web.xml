        <servlet-class>controller.collection.TuongOtSieuCayCollectionController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>controller.authentication.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>controller.authentication.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>profile</servlet-name>
        <servlet-class>controller.ProfileController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addprod</servlet-name>
        <servlet-class>controller.admin.AddProductController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>manage</servlet-name>
        <servlet-class>controller.admin.ManageController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>resetpass</servlet-name>
        <servlet-class>controller.ResetPasswordController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>registeracc</servlet-name>
        <servlet-class>controller.RegisterController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>search</servlet-name>
        <servlet-class>controller.SearchController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>purchaseitem</servlet-name>
        <servlet-class>controller.PurchaseController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cart</servlet-name>
        <servlet-class>controller.CartController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>admineditpage</servlet-name>
        <servlet-class>controller.admin.EditProductController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>admindeletepage</servlet-name>
        <servlet-class>controller.admin.RemoveProductController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>tuongot</servlet-name>
        <url-pattern>/collection/tuong-ot-han-quoc</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>tuongotsieucay</servlet-name>
        <url-pattern>/collection/tuong-ot-han-quoc-sieu-cay</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>profile</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addprod</servlet-name>
        <url-pattern>/admin/addproduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>manage</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
